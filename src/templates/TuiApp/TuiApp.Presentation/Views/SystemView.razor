@using RazorConsole.Components
@using Spectre.Console
@using TuiApp.Presentation.Base
@using TuiApp.Presentation.ViewModels
@inherits RazorConsoleView<SystemViewModel>

@page "/system"

<Columns>
    <Panel Title="System Overview" BorderColor="Color.Green">
        <Rows>
            <Columns>
                <Markup Content="Machine Name:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.MachineName}")" Foreground="Color.SteelBlue" />
            </Columns>

            <Columns>
                <Markup Content="Operating System:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.OsDescription}")" Foreground="Color.SteelBlue" />
            </Columns>

            <Columns>
                <Markup Content="Logical Cores:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.LogicalCores}")" Foreground="Color.Aquamarine1" />
            </Columns>

            <Columns>
                <Markup Content="RAM:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.TotalMemoryGB} GB")" Foreground="Color.Cyan1" />
            </Columns>
        </Rows>
    </Panel>
</Columns>