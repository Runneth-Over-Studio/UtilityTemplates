@using RazorConsole.Components
@using Spectre.Console
@using TuiApp.Presentation.Base
@using TuiApp.Presentation.ViewModels
@inherits RazorConsoleView<NetworkViewModel>

@page "/network"

<Columns>
    <Panel Title="Network Traffic" BorderColor="Color.Cyan1">
        <Rows>
            <Columns>
                <Markup Content="Download:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.DownloadSpeedMB:F2} MB/s")" Foreground="Color.Green" />
            </Columns>
            <Columns>
                <Markup Content="Upload:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.UploadSpeedMB:F2} MB/s")" Foreground="Color.Blue" />
            </Columns>
            <Columns>
                <Markup Content="Latency:" Foreground="Color.Grey" />
                <Markup Content="@($"{ViewModel.Latency} ms")" Foreground="@GetLatencyColor(ViewModel.Latency)" />
            </Columns>
        </Rows>
    </Panel>

    <Panel Title="Active TCP Connections" BorderColor="Color.Purple">
        <Rows>
            @foreach (var conn in ViewModel.ActiveTCPConnections)
            {
                <Columns>
                    <Markup Content="@conn.Remote" Foreground="Color.White" />
                    <Markup Content="@conn.State" Foreground="Color.Aqua" />
                </Columns>
            }
        </Rows>
    </Panel>
</Columns>

@code {
    private Color GetLatencyColor(int latency)
    {
        if (latency < 20) return Color.Green;
        if (latency < 50) return Color.Yellow;
        return Color.Red;
    }
}