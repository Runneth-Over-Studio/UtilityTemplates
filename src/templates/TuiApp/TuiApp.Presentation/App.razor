@using TuiApp.Presentation.Base.Layouts
@using Microsoft.AspNetCore.Components.Routing
@using RazorConsole.Components
@inject NavigationManager Nav

@namespace TuiApp.Presentation

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="RouteContext">
        <RouteView RouteData="RouteContext" DefaultLayout="typeof(MainLayout)" />
    </Found>
    <NotFound>
        <Markup Content="How did you even get there?" />
        <TextButton OnClick="@(() => Nav.NavigateTo("/"))" Content="Back to main" />
    </NotFound>
</Router>
